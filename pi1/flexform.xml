<T3DataStructure>
	<meta type="array">
		<langChildren>0</langChildren>
	        <langDisable>1</langDisable>
	</meta>
	<ROOT>
		<type>array</type>
		<el>
			<template>
				<TCEforms>
					<label>Template File</label>
					<config>
						<type>input</type>
						<default>EXT:cag_relatedcontent/template.html</default>
					</config>
				</TCEforms>
			</template>
			<maxItems>
				<TCEforms>
					<label>Maximum number of related pages</label>
					<config>
						<type>input</type>
						<default>10</default>
					</config>
				</TCEforms>
			</maxItems>
			<inheritLevels>
				<TCEforms>
					<label>Inherit categories from parent pages (number of levels to inherit from)</label>
                     <config>
                      <type>select</type>
                      <items type="array">
                       <numIndex index="0" type="array">
                        <numIndex index="0">Do not inherit categories</numIndex>
                        <numIndex index="1">0</numIndex>
                       </numIndex>
                       <numIndex index="1" type="array">
                        <numIndex index="0">1 level</numIndex>
                        <numIndex index="1">1</numIndex>
                       </numIndex>
                       <numIndex index="2" type="array">
                        <numIndex index="0">2 levels</numIndex>
                        <numIndex index="1">2</numIndex>
                       </numIndex>
                       <numIndex index="3" type="array">
                        <numIndex index="0">3 levels</numIndex>
                        <numIndex index="1">3</numIndex>
                       </numIndex>
                       <numIndex index="4" type="array">
                        <numIndex index="0">4 levels</numIndex>
                        <numIndex index="1">4</numIndex>
                       </numIndex>
                      </items>
                      <minitems>0</minitems>
                      <maxitems>1</maxitems>
                      <size>1</size>
                     </config>
				</TCEforms>
			</inheritLevels>
			<matchNewsCategories>
				<TCEforms>
				 <label>Mode</label>
				 <config>
				  <type>select</type>
				  <items type="array">
				   <numIndex index="1" type="array">
					<numIndex index="0">Match Page Categories</numIndex>
					<numIndex index="1">0</numIndex>
				   </numIndex>
				   <numIndex index="2" type="array">
					<numIndex index="0">Match News Categories</numIndex>
					<numIndex index="1">1</numIndex>
				    </numIndex>
				  </items>
				  <minitems>0</minitems>
				  <maxitems>1</maxitems>
				  <size>1</size>
				 </config>
				</TCEforms>
			</matchNewsCategories>
			<newsSinglePid>



				<TCEforms>
					<label>ID of News single detail page (only set this if "Match Content Type" is "News")</label>
					<config>
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>pages</allowed>
                        <size>1</size>
                        <minitems>0</minitems>
                        <maxitems>1</maxitems>
						<default></default>
					</config>
				</TCEforms>
			</newsSinglePid>
		</el>
	</ROOT>
</T3DataStructure>
